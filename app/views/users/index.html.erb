<h1 class="text-center">All Alpha Bloggers</h1>
<div class="text-center">
    <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
</div>
<% @users.each do |user| %>
    <div class="text-center pb-3">
        <div class="card col-md-4 offset-4">
            <div class="card-body">
                <%= link_to gravatar_for(user), user_path(user) %>
                <p class="card-title">
                    <%= link_to user.username, user_path(user) %>
                </p>
                <p><small>
                    <%= pluralize(user.articles.count, "article") if user.articles %>
                    <% if logged_in? and current_user.admin? %>
                        <p><%= link_to "Delete this user", user_path(user), method: :delete,
                                        data: { confirm: "Are you sure you want to delete the user and all their articles?" }%></p>
                    <% end %>
                </small></p>
            </div>
        </div>
    </div>                    
<% end %>
<div class="text-center">
    <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
</div>