<h1 class="text-center">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal offset-sm-3 ", role: "form"}, url: login_path) do |f| %>
<div class="form-group">
    <div class="col-form-label col-sm-2">
        <%= f.label :email %>
    </div>
    <div class="col-sm-8">
        <%= f.email_field :email, class: 'form-control', placeholder: "Enter email", autofocus:  true %>
    </div>
</div>
<div class="form-group">
    <div class="col-form-label col-sm-2">
        <%= f.label :password %>
    </div>
    <div class="col-sm-8">
        <%= f.password_field :password, class: 'form-control', placeholder: "**********", autocomplete: "off"%>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
    </div>
</div>
<% end %>
<div class="col-4 offset-5">
[ <%= link_to "Cancel request and return to articles listing",  articles_path %> ]
</div>