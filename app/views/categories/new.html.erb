<h1 class="text-center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>
        <%= form_for(@category, :html => {class: "form-horizontal offset-sm-3 ", role: "form"}) do |f|%>
            <div class="form-group">
                <div class="col-form-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: 'form-control', placeholder: "Enter category", autofocus:  true %>
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>
        <div class="col-4 offset-5">
           [ <%= link_to "Cancel request and return to articles listing",  articles_path %> ]
        </div>