<% if obj.errors.any?  %>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card bg-danger text-white">
                <div class="card-header">
                    <h2 class="card-title">
                        <%= pluralize(obj.errors.count, "error") %>
                        prohibited this article from being saved:
                    </h2>
                    <div class="card-body">
                        <ul>
                            <% obj.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>